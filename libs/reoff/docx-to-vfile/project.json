{
  "name": "docx-to-vfile",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/reoff/docx-to-vfile/src",
  "projectType": "library",
  "targets": {
    "readme": {
      "executor": "utils-readme:update-readme",
      "options": {
        "readme": "libs/reoff/docx-to-vfile/README.md",
        "packageJSON": "libs/reoff/docx-to-vfile/package.json"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/libs/reoff/docx-to-vfile"],
      "options": {
        "passWithNoTests": true
      }
    },
    "make-publishable": {
      "executor": "better-nx-tsc:publishable"
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "rootDir": "libs/reoff/docx-to-vfile/src",
        "outputPath": "dist/libs/reoff/docx-to-vfile",
        "tsConfig": "libs/reoff/docx-to-vfile/tsconfig.lib.json",
        "main": "libs/reoff/docx-to-vfile/src/index.ts",
        "assets": ["libs/reoff/docx-to-vfile/*.md"]
      },
      "dependsOn": [
        {
          "target": "build",
          "params": "forward",
          "dependencies": true
        },
        {
          "target": "lint"
        }
      ]
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "trackDeps": true,
        "push": true,
        "baseBranch": "main",
        "postTargets": [
          "docx-to-vfile:npm",
          "docx-to-vfile:github",
          "docx-to-vfile:github-standalone"
        ]
      },
      "dependsOn": [
        {
          "target": "version",
          "params": "forward",
          "dependencies": true
        }
      ]
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "npm": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    },
    "github-standalone": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}",
        "repo": "TrialAndErrorOrg/docx-to-vfile"
      }
    }
  },
  "tags": []
}
