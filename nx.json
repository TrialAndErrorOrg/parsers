{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "trialanderror",
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "libs"
  },
  "affected": {
    "defaultBase": "main"
  },
  "cli": {
    "defaultCollection": "@nx/next"
  },
  "generators": {
    "@nx/node:library": {},
    "@nx/react": {
      "application": {
        "babel": true
      }
    },
    "@nx/next": {
      "application": {
        "style": "css",
        "linter": "eslint"
      }
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/vite.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s"
    ],
    "sharedGlobals": []
  },
  "implicitDependencies": {
    "workspace.json": "*",
    "package.json": {
      "dependencies": "*",
      "devDependencies": "*"
    },
    ".eslintrc.json": "*",
    "tsconfig.base.json": "*",
    "nx.json": "*"
  },
  "targetDefaults": {
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"],
      "options": {
        "fix": true,
        "lintFilePatterns": ["{projectRoot}/**/*.{js,jsx,ts,tsx}", "{projectRoot}/package.json"]
      }
    },
    "build": {
      "dependsOn": ["^build", "lint"],
      "inputs": ["production", "^production"]
    },
    "version": {
      "dependsOn": ["^version", "build"],
      "options": {
        "preset": "conventional",
        "trackDeps": true
      }
    },
    "npm": {
      "options": {
        "access": "public"
      }
    },
    "e2e": {
      "inputs": ["default", "^production"]
    },
    "test": {
      "inputs": ["default", "^production"]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "@vercel/remote-nx",
      "options": {
        "verbose": true,
        "cacheDirectory": "/tmp/nx-cache",
        "cacheableOperations": ["build", "lint", "test", "e2e", "npm", "readme", "version"]
      }
    }
  }
}
