{
  "name": "jast",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/jast/jast/src",
  "projectType": "library",
  "targets": {
    "readme": {
      "executor": "@jote/utils/readme:update-readme",
      "options": {
        "readme": "libs/jast/jast/README.md",
        "packageJSON": "libs/jast/jast/package.json"
      }
    },
    "build": {
      "executor": "@nrwl/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/jast/jast",
        "tsConfig": "libs/jast/jast/tsconfig.lib.json",
        "packageJson": "libs/jast/jast/package.json",
        "main": "libs/jast/jast/src/index.ts",
        "assets": ["libs/jast/jast/*.md"],
        "updateBuildableProjectDepsInPackageJson": true,
        "clean": true,
        "buildableProjectDepsInPackageJsonType": "dependencies"
      },
      "dependsOn": [
        {
          "projects": "dependencies",
          "target": "build",
          "params": "forward"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/jast/jast/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/jast/jast"],
      "options": {
        "jestConfig": "libs/jast/jast/jest.config.js",
        "passWithNoTests": true
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    }
  },
  "tags": []
}
